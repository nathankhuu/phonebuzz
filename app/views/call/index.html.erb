<%= simple_form_for @call, url:call_index_path do |f| %>
  <%= f.input :phone_number, label: "Phone Number - required" %>
	<%= f.input :delay, label: "Delay (in seconds) - optional" %>
  <%= f.button :submit, "Make Call" %>
<% end %>
<br>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
